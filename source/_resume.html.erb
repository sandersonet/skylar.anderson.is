    var expand = { add: this.expandedClass, remove: this.contractedClass };
    var contract = { add: this.contractedClass, remove: this.expandedClass };
    var operations = this.node.classList.contains(this.expandedClass) ? contract : expand;
    var node = this.node;
    Object.keys(operations).forEach(function(operation) {
      var className = operations[operation];
      node.classList[operation](className);
    });
  }


  function onDomLoad() {
